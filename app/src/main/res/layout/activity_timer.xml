<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

    <TextView
            android:text="@string/timer_reached_message"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/timer_reached_title"
            app:layout_constraintEnd_toEndOf="@+id/timer_reached_message"
            app:layout_constraintBottom_toBottomOf="parent"
            android:letterSpacing="0.2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/timer_reached_message"
            app:layout_constraintTop_toTopOf="@+id/timer_reached_message"
            android:textColor="@color/white"
            app:layout_constraintVertical_bias="0.13" />

    <TextView
            android:text="@string/timer_reached_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer_reached_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="20sp"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.39" />

    <Button
            android:text="@string/timer_reached_hide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hide"
            android:textColor="@android:color/holo_red_light"
            app:rippleColor="@color/white"
            app:strokeColor="#F44336"
            android:shadowColor="#F44336"
            android:background="@empty"
            app:layout_constraintTop_toBottomOf="@+id/timer_reached_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/timer_reached_title"
            app:layout_constraintEnd_toEndOf="@+id/timer_reached_title"
            android:backgroundTintMode="add" />

</androidx.constraintlayout.widget.ConstraintLayout>